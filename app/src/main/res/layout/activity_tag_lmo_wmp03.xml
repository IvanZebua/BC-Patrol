<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TAG_LMO_WMP03">

    <TextView
        android:id="@+id/tv_TAG_LMO_WMP03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sasaran Patroli WMP 03"
        android:textColor="@color/green_berau"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_TAG_LMO_WMP03_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Plang Rambu Larangan Memancing/Berengan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green_berau"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_TAG_LMO_WMP03"/>
    <EditText
        android:id="@+id/et_TAG_LMO_WMP03_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_TAG_LMO_WMP03_1"/>
    <Button
        android:id="@+id/btn_TAG_LMO_WMP03_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sudah Patroli"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_TAG_LMO_WMP03_1"/>

    <TextView
        android:id="@+id/tv_TAG_LMO_WMP03_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pintu Air"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green_berau"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_TAG_LMO_WMP03_1"/>
    <EditText
        android:id="@+id/et_TAG_LMO_WMP03_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_TAG_LMO_WMP03_2"/>
    <Button
        android:id="@+id/btn_TAG_LMO_WMP03_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sudah Patroli"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_TAG_LMO_WMP03_2"/>

</androidx.constraintlayout.widget.ConstraintLayout>