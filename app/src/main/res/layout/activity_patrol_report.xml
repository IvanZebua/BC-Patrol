<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatrolReportActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green_berau">
        <TextView
            android:id="@+id/tv_pelaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pelaporan Patroli"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tv_pilih_mitra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mitra"
        android:textSize="30sp"
        android:textColor="@color/green_berau"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar1"/>

    <Button
        android:id="@+id/btn_SOS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SOS"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/green_berau"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintCircleRadius="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_pilih_mitra"/>

    <Button
        android:id="@+id/btn_MBJ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MBJ"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/green_berau"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintCircleRadius="200dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_SOS"/>

    <Button
        android:id="@+id/btn_TAG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAG"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/green_berau"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="20dp"
        app:layout_constraintCircleRadius="200dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_MBJ"/>

    <TextView
        android:id="@+id/backtoMA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/green_berau"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>