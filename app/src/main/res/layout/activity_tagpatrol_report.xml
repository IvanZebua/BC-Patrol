<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TAGPatrolReportActivity">

    <TextView
        android:id="@+id/TAGMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TAG Menu"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/green_berau"
        android:gravity="center"
        app:layout_editor_absoluteY="60dp"/>

    <Button
        android:id="@+id/btn_Patroli_LMO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LMO"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/green_berau"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@+id/TAGMenu"/>

    <Button
        android:id="@+id/btn_Patroli_SMO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SMO"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/green_berau"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Patroli_LMO"/>

    <Button
        android:id="@+id/btn_Patroli_BMO1_KM1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patroli BMO 1 KM 1"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/green_berau"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Patroli_SMO"/>

    <Button
        android:id="@+id/btn_Patroli_BMO1_KM28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patroli BMO 1 KM 28"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/green_berau"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Patroli_BMO1_KM1"/>

    <Button
        android:id="@+id/btn_Patroli_HO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HO"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/green_berau"
        android:layout_marginTop="20dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_Patroli_BMO1_KM28"/>

</androidx.constraintlayout.widget.ConstraintLayout>