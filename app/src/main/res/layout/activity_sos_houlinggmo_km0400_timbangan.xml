<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SOS_HOULINGGMO_KM0400_Timbangan">

    <TextView
        android:id="@+id/tv_ListPatroliTimbangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timbangan"
        android:textColor="@color/green_berau"
        android:textSize="40sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tv_ListPatroliTimbangan_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pos Timbangan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green_berau"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ListPatroliTimbangan"/>
    <EditText
        android:id="@+id/et_ListPatroliTimbangan_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ListPatroliTimbangan_1"/>
    <Button
        android:id="@+id/btn_ListPatroliTimbangan_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sudah Patroli"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_ListPatroliTimbangan_1"/>

    <TextView
        android:id="@+id/tv_ListPatroliTimbangan_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jembatan Timbangan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green_berau"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_ListPatroliTimbangan_1"/>
    <EditText
        android:id="@+id/et_ListPatroliTimbangan_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ListPatroliTimbangan_2"/>
    <Button
        android:id="@+id/btn_ListPatroliTimbangan_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sudah Patroli"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_ListPatroliTimbangan_2"/>

    <TextView
        android:id="@+id/tv_ListPatroliTimbangan_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lampu Lalin Jembatan Timbangan"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/green_berau"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_ListPatroliTimbangan_2"/>
    <EditText
        android:id="@+id/et_ListPatroliTimbangan_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_ListPatroliTimbangan_3"/>
    <Button
        android:id="@+id/btn_ListPatroliTimbangan_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sudah Patroli"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_ListPatroliTimbangan_3"/>

</androidx.constraintlayout.widget.ConstraintLayout>